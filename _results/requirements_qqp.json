[
    {
        "capability": "Vocab",
        "description": "Adding an adjective makes questions non-duplicates",
        "search_pairs": false,
        "search": [
            {
                "length": "<10",
                "exclude": {
                    "POS": [
                        "adj"
                    ],
                    "word": null
                }
            }
        ],
        "transform": {
            "MFT": "add adj"
        }
    },
    {
        "capability": "Vocab",
        "description": "Add modifiers that preserve question semantics (e.g. 'really')",
        "search_pairs": false,
        "search": [
            {
                "include": {
                    "POS": null,
                    "word": [
                        "really|truly|actually|indeed|in fact"
                    ],
                    "search_pairs": false
                }
            }
        ],
        "transform": {
            "MFT": "remove really|truly|actually|indeed|in fact"
        }
    },
    {
        "capability": "Taxonomy",
        "description": "Synonyms in templates",
        "search_pairs": false,
        "search": [
            {
                "include": {
                    "POS": null,
                    "word": [
                        "<synonym>"
                    ]
                }
            }
        ],
        "transform": {
            "MFT": "replace synonyms"
        }
    },
    {
        "capability": "Taxonomy",
        "description": "Replace words with synonyms in real pairs",
        "search_pairs": true,
        "search": [
            {
                "include": {
                    "POS": null,
                    "word": [
                        "<synonym>"
                    ]
                }
            }
        ],
        "transform": {
            "MFT": "replace synonyms"
        }
    },
    {
        "capability": "Taxonomy",
        "description": "More X = Less antonym(X)",
        "search_pairs": false,
        "search": [
            {
                "include": {
                    "POS": null,
                    "word": [
                        "more|less"
                    ]
                }
            }
        ],
        "transform": {
            "MFT": "replace more_less"
        }
    }
]