[
    {
        "capability": "Vocab_POS",
        "description": "Short sentences with neutral adjectives and nouns",
        "search": [
            {
                "length": "<10",
                "include": {
                    "POS": [
                        "neutral adjs",
                        "neutral nouns"
                    ],
                    "word": null
                },
                "exclude": {
                    "POS": [
                        "positive adjs",
                        "negative adjs",
                        "positive nouns",
                        "negative nouns"
                    ],
                    "word": null
                },
                "label": "neutral"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": null
    },
    {
        "capability": "Vocab_POS",
        "description": "Short sentences with sentiment-laden adjectives",
        "search": [
            {
                "length": "<10",
                "include": {
                    "POS": [
                        "positive adjs"
                    ],
                    "word": null
                },
                "exclude": {
                    "POS": [
                        "negative adjs",
                        "negative verbs",
                        "negative nouns"
                    ],
                    "word": null
                },
                "label": "positive"
            },
            {
                "length": "<10",
                "include": {
                    "POS": [
                        "negative adjs"
                    ],
                    "word": null
                },
                "exclude": {
                    "POS": [
                        "negative verbs",
                        "negative nouns",
                        "positive adjs",
                        "positive verbs",
                        "positive nouns"
                    ],
                    "word": null
                },
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": null
    },
    {
        "capability": "Temporal",
        "description": "Sentiment change over time, present should prevail",
        "search": [
            {
                "label": "positive"
            },
            {
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "add temporal_awareness"
    },
    {
        "capability": "Negation",
        "description": "Negated negative should be positive or neutral",
        "search": [
            {
                "label": "negative",
                "include": {
                    "POS": [
                        "<^demonstratives_AUXBE>"
                    ],
                    "word": null
                }
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "negate ^demonstratives_AUXBE"
    },
    {
        "capability": "Negation",
        "description": "Negated neutral should still be neutral",
        "search": [
            {
                "label": "neutral",
                "include": {
                    "POS": [
                        "<^demonstratives_AUXBE>"
                    ],
                    "word": null
                }
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "negate ^demonstratives_AUXBE"
    },
    {
        "capability": "Negation",
        "description": "Negation of negative at the end, should be positive or neutral",
        "search": [
            {
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "negate AUXBE$"
    },
    {
        "capability": "Negation",
        "description": "Negated positive with neutral content in the middle",
        "search": [
            {
                "length": "<20",
                "label": "positive"
            },
            {
                "length": "<20",
                "label": "neutral"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "negate positive"
    },
    {
        "capability": "SRL",
        "description": "Author sentiment is more important than of others",
        "search": [
            {
                "label": "positive"
            },
            {
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "srl"
    },
    {
        "capability": "SRL",
        "description": "parsing sentiment in (question, yes) form",
        "search": [
            {
                "label": "positive"
            },
            {
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "questionize yes"
    },
    {
        "capability": "SRL",
        "description": "Parsing positive sentiment in (question, no) form",
        "search": [
            {
                "label": "positive"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "questionize no"
    },
    {
        "capability": "SRL",
        "description": "Parsing negative sentiment in (question, no) form",
        "search": [
            {
                "label": "negative"
            }
        ],
        "expansion": [
            "neutral"
        ],
        "transform": "questionize no"
    }
]
